---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { QuantumControls } from '../../components/lab/QuantumControls';
---

<BaseLayout title="Quantum Substrate">
  <main class="container">
    <header class="page-header">
      <h1 class="h1">Quantum Substrate</h1>
      <p class="subtitle">
        Interactive quantum field visualization with three.js and custom shaders.
      </p>
    </header>

    <div data-quantum-container>
      <QuantumControls 
        client:only="react"
        key={Astro.url.pathname} 
      />
    </div>
  </main>
</BaseLayout>

<style>
  :global(.quantum-slider) {
    @apply appearance-none h-1.5 rounded-full bg-muted;
  }
  :global(.quantum-slider::-webkit-slider-thumb) {
    @apply appearance-none w-4 h-4 rounded-full bg-[#00FFFF] cursor-pointer;
  }
  :global(.quantum-button) {
    @apply px-4 py-2 rounded-lg bg-muted hover:bg-muted/80 font-mono text-sm flex items-center justify-center;
  }
</style>