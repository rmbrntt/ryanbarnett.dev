---
import BaseLayout from '../../layouts/BaseLayout.astro';
import QuantumViz from '../../components/lab/quantum/QuantumViz';

---

<BaseLayout title="Quantum Visualization">
  <main class="container mx-auto px-4 py-8">
    <header class="mb-8">
      <h1 class="h1">Quantum Visualization</h1>
      <p class="subtitle">
        An interactive particle system with quantum-inspired transitions and effects.
      </p>
    </header>

    <div class="w-full aspect-[16/9] bg-black rounded-lg overflow-hidden">
      <QuantumViz client:only="react" />
    </div>
  </main>
</BaseLayout> 