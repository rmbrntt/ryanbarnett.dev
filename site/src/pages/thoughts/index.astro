---
import BaseLayout from '../../layouts/BaseLayout.astro';

// This will be replaced with real content collection data
const thoughts = [
  {
    slug: 'example-1',
    title: 'Building a Digital Garden',
    description: 'Exploring the intersection of knowledge management and digital spaces.',
    date: new Date('2024-02-20'),
  },
  {
    slug: 'example-2',
    title: 'System Thinking and Software',
    description: 'How systems thinking can improve software architecture.',
    date: new Date('2024-02-15'),
  }
];
---

<BaseLayout title="Thoughts - Ryan Barnett">
  <div class="prose prose-lg mx-auto">
    <h1 class="mb-4 text-4xl font-bold tracking-tight">Thoughts</h1>
    <p class="text-xl text-base-600 mb-12">
      Exploring ideas at the intersection of technology and human potential.
    </p>
    
    <div class="space-y-12">
      {thoughts.map(thought => (
        <article>
          <h2 class="text-2xl font-semibold mb-2">
            <a 
              href={`/thoughts/${thought.slug}`}
              class="text-blue hover:text-blue-light transition-colors"
            >
              {thought.title}
            </a>
          </h2>
          <p class="text-base-600 mb-2">{thought.description}</p>
          <time class="text-sm text-base-500" datetime={thought.date.toISOString()}>
            {thought.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>