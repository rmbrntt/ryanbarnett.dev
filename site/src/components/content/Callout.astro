---
interface Props {
  type?: 'info' | 'key' | 'warning' | 'insight';
  class?: string;
}

const { type = 'info', class: className = '' } = Astro.props;

const typeStyles = {
  info: 'border-quantum-secondary/40 bg-quantum-secondary/5',
  key: 'border-quantum-primary/40 bg-quantum-primary/5',
  warning: 'border-quantum-warning/40 bg-quantum-warning/5',
  insight: 'border-quantum-accent/40 bg-quantum-accent/5'
};
---

<div class={`my-8 p-6 rounded-lg border ${typeStyles[type]} ${className}`}>
  <slot />
</div> 