---
import ThoughtCard from './ThoughtCard.astro';
import CodeBlock from './CodeBlock.astro';

const thoughts = [
  {
    href: '/thoughts/building-a-digital-garden',
    title: 'Building a Digital Garden',
    description: 'Exploring the intersection of knowledge management and digital spaces.',
    date: 'February 19, 2024'
  },
  {
    href: '/thoughts/system-thinking',
    title: 'System Thinking and Software',
    description: 'How systems thinking can improve software architecture.',
    date: 'February 14, 2024'
  }
];

const codeExample = `// Example code
const quantum = {
  state: "superposition",
  collapse() {
    return Math.random() > 0.5
  }
}`;
---

<main class="container max-w-4xl mx-auto px-4 py-16">
  <header>
    <h1 class="text-4xl font-bold mb-4">Technology Ã— Human Potential</h1>
    <p class="text-xl text-muted-foreground">Lead. Solve. Learn.</p>
  </header>

  <div class="mt-16 space-y-12">
    <section>
      <h2 class="text-2xl font-semibold mb-6">Recent Thoughts</h2>
      <div class="space-y-6">
        {thoughts.map((thought) => (
          <ThoughtCard {...thought} />
        ))}
      </div>
    </section>

    <section>
      <CodeBlock code={codeExample} />
    </section>
  </div>
</main>

<style>
  main {
    animation: fadeIn 0.5s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  section {
    opacity: 0;
    animation: fadeIn 0.5s ease-out forwards;
  }

  section:nth-child(1) { animation-delay: 200ms; }
  section:nth-child(2) { animation-delay: 400ms; }
</style>